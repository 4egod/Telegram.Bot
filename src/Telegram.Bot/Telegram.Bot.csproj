<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Telegram.Bot.Core</PackageId>
    <TargetFramework>netstandard1.1</TargetFramework>
    <PackageVersion>12.0.0</PackageVersion>
    <AssemblyName>Telegram.Bot</AssemblyName>
    <AssemblyTitle>Telegram.Bot</AssemblyTitle>
    <PackageTags>telegram bot chatbot chat netcore</PackageTags>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>

    <Authors>Robin Müller, Poulad</Authors>
    <Owners>Poulad</Owners>

    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Product>Telegram Bot API</Product>
    <Description>Telegram Bot API Library</Description>

    <Product>Telegram Bot API</Product>
    <PackageProjectUrl>https://github.com/TelegramBots/Telegram.Bot.Core</PackageProjectUrl>
    <RepositoryUrl>https://github.com/TelegramBots/Telegram.Bot.Core</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageIconUrl>https://telegram.org/file/811140058/2/7GzMJk4Ij54/a1649c56fa9f805828</PackageIconUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/TelegramBots/Telegram.Bot.Core/master/LICENSE.txt</PackageLicenseUrl>
    <PackageReleaseNotes>Telegram Bot API 3.1</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard1.1\Telegram.Bot.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard1.1\Telegram.Bot.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

</Project>
